#include<iostream>
using namespace std;
void* add(void*ptr,int n);
int main(){
    int n;
    cout<<"Enter number of elements you want to add"<<endl;
    cin>>n;
    int arr[n];
    cout<<"Enter elements of array"<<endl;
    for (int i = 0; i < n; i++)
    {
       cin>>arr[i];
    }
       void* result = add((void*)arr, n);
       int *sum=(int*)result;

    cout << "Sum is: " << *sum << endl;
}
void* add(void*ptr,int n){
    int sum=0;
    int* arr=(int*)ptr;
    for (int i = 0; i < n; i++)
    {
      sum+=*arr;
     arr++;
    }
    void *ret=&sum;    
    return ret;
}
