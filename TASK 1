#include<iostream>
using namespace std;

int main(){
    int n,sum=0;
    cout<<"Enter number of elements of array"<<endl;
    cin>>n;
    int arr[n];
    int *ptr=arr;
    cout<<"Enter elements of array"<<endl;
    for (int  i = 0; i < n; i++)
    {
       cin>>arr[i];
    }
    for (int i = 0; i < n; i++)
    {
        sum+=*ptr;
        ptr++;
    }
    cout<<"Sum is "<<sum<<endl;
    return 0;
}
